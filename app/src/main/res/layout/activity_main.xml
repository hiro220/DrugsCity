<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 画面上部 -->
        <!-- 各種infomation -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 現在のターン -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/turnLabel" />
            <TextView
                android:id="@+id/turnTextArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 汎用テキストエリア -->
            <TextView
                android:id="@+id/freeTextArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:text="ここに一時的な情報を表示する" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phaseLabel" />
            <TextView
                android:id="@+id/faseTextArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
            <!-- 現在のフェーズ -->
            <!-- 自分の麻薬 -->

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mydrug"/>

            <TextView
                android:id="@+id/myDrugTextArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ここに自分の麻薬を表示する"/>

        </LinearLayout>
            <!-- 他プレイヤー情報 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="プレイヤー1"/>
        </LinearLayout>

        <!-- 画面下部 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- アクションログ -->

            <!-- アクション・麻薬選択画面 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="152dp"
                android:orientation="vertical">
                <!-- アクション一覧 -->

                <!-- 麻薬一覧 -->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>