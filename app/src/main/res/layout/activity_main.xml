<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 各種infomation -->

        <!-- 汎用テキストエリア -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- アクション実行順序、今実行されたアクションを表示する -->
            <TextView
                android:id="@+id/freeTextArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:text="ここに一時的な情報を表示する" />
        </LinearLayout>

        <!-- 現在のターン -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/turnLabel" />
            <TextView
                android:id="@+id/turnTextArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
        </LinearLayout>

        <!-- 現在のフェーズ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phaseLabel" />
            <TextView
                android:id="@+id/faseTextArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
        </LinearLayout>

        <!-- 自分の麻薬 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mydrug"/>

            <TextView
                android:id="@+id/myDrugTextArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ここに自分の麻薬を表示する"/>
        </LinearLayout>

        <!-- 他プレイヤー情報 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- 捕まったら、横に「逮捕」と表示する -->
                <!-- 麻薬が判明すれば、名称が麻薬名になる -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/player1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【プレイヤー1】" />
                <RadioButton
                    android:id="@+id/player2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【プレイヤー2】" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/player3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【プレイヤー3】" />
                <RadioButton
                    android:id="@+id/player4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【プレイヤー4】" />
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>

        <!-- アクションログ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <!-- アクション・麻薬選択画面 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- アクション一覧 -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【全体アクション】"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/action1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全体1" />

                    <RadioButton
                        android:id="@+id/action2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全体2" />

                    <RadioButton
                        android:id="@+id/action3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全体3" />

                    <RadioButton
                        android:id="@+id/action4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全体4" />

                    <RadioButton
                        android:id="@+id/action5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全体5" />
                </LinearLayout>
            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【単体アクション】"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/one_action1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="単体1" />

                    <RadioButton
                        android:id="@+id/one_action2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="単体2" />

                    <RadioButton
                        android:id="@+id/one_action3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="単体3" />
                </LinearLayout>
            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【防御アクション】"/>
            <RadioButton
                android:id="@+id/def_action1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="防御" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【麻薬チェック】"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/mazai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mazai" />

                    <RadioButton
                        android:id="@+id/grass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grass" />

                    <RadioButton
                        android:id="@+id/powderMint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/powderMint" />

                    <RadioButton
                        android:id="@+id/mouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mouse" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/smokyAroma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/smokyAroma" />
                    <RadioButton
                        android:id="@+id/joker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/joker" />
                    <RadioButton
                        android:id="@+id/spiderDrug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spiderDrug" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/peridot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/peridot" />
                    <RadioButton
                        android:id="@+id/nShot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nShot" />
                    <RadioButton
                        android:id="@+id/lifeBug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lifeBug" />

                </LinearLayout>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>